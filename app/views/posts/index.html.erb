<% @posts.each do |post| %>
    <h2><%=h post.title %></h2>
    <span class="bp_date">
      <em>
        <%= h post.created_at.to_s %>
      </em>
    </span>
    <div class="blog_post"><%= post.content %></div>
    <div>
      <span><%= link_to 'Edit', edit_post_path(post) %></span>
      <span><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></span>
    </div>
<% end %>

<%= link_to 'Nowy post', new_post_path %>